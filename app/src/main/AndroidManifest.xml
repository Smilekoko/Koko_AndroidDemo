<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.koko.www.androiddemo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.android.launcher.permission.READ_SETTINGS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_SETTINGS"
        tools:ignore="ProtectedPermissions" /> <!-- 这个权限用于访问GPS定位 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" /> <!-- 这个权限用于进行网络定位 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" /> <!-- 获取运营商信息，用于支持提供运营商信息相关的接口 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- 用于访问wifi网络信息，wifi信息会用于进行网络定位 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" /> <!-- 这个权限用于获取wifi的获取权限，wifi信息会用来进行网络定位 -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" /> <!-- 用于读取手机当前的状态 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    
    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".component.paging.pagingWithDb.PagingActivity"/>
        <activity android:name=".component.room.RoomActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- lifecycle-aware生命周组件 -->
        <activity android:name=".component.lifecycleAware.LifecycleActivity" /> <!-- LiveData的例子 -->
        <activity
            android:name=".component.viewModel.liveData.LiveDataActivity"
            android:label="LiveData demo"
            android:theme="@style/AppTheme" /> <!-- ViewModel的例子 -->
        <activity
            android:name=".component.viewModel.ViewModelActivity"
            android:label="ViewModel demo"
            android:theme="@style/ActionBarTheme" /> <!-- dataBinding的例子 -->
        <activity android:name=".component.dataBinding.DataBindingActivity" /> <!-- AppBar和SystemUI -->
        <activity android:name=".useInterface.layout.ThemeActivity" />
        <activity
            android:name=".useInterface.systemUi.SystemUIActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".useInterface.widget.appbar.CollapsingToolbarLayoutActivity"
            android:theme="@style/CustomStatusBarTheme" />
        <activity android:name=".useInterface.widget.appbar.CoordinatorLayoutActivity" />
        <activity
            android:name=".useInterface.widget.appbar.AppBarLayoutActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".useInterface.widget.appbar.ToolBarActivity"
            android:theme="@style/AppTheme.NoActionBar" /> <!-- Navigation组件 -->
        <activity
            android:name=".navigation.NavMainActivity"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />
        <activity android:name=".useInterface.widget.textView.TextViewActivity" />
        <activity android:name=".debug.DebugActivity" />
        <activity android:name=".component.activity.status.StateActivity" />
        <activity android:name=".component.activity.OneActivity" />
        <activity android:name=".component.activity.TwoActivity" />
        <activity
            android:name=".component.activity.launchMode.TaskAffinityActivity"
            android:taskAffinity="com.kook_TaskAffinity.task" />
        <activity
            android:name=".component.activity.launchMode.SingleTopActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".component.activity.launchMode.CLEAR_TOPActivity"
            android:launchMode="singleTop" />
        <activity android:name=".component.activity.interact.ImplicitIntentActivity" />
        <activity
            android:name=".component.activity.multiWindow.MultiWindowActivity1"
            android:resizeableActivity="true"
            tools:targetApi="n">
            <layout
                android:defaultWidth="600dp"
                android:defaultHeight="500dp"
                android:gravity="top|end"
                android:minWidth="300dp"
                android:minHeight="250dp"
                tools:targetApi="n" />
        </activity>
        <activity
            android:name=".component.activity.multiWindow.MultiWindowActivity2"
            android:resizeableActivity="true"
            tools:targetApi="n">
            <layout
                android:defaultWidth="300dp"
                android:defaultHeight="300dp"
                android:gravity="top|end"
                android:minWidth="100dp"
                android:minHeight="100dp" />
        </activity>
        <activity android:name=".component.service.Service_Activity" />

        <activity android:name=".component.fragment.multiWindows.AndroidMeActivity" />

        <activity android:name=".component.fragment.multiWindows.MasterListActivity" />
        <activity android:name=".useInterface.layout.recyclerView.RecyclerView_Activity" />
        <activity android:name=".useInterface.layout.swipeRefreshLayout.SwipeRefreshLayout_Activity" />
        <activity android:name=".useInterface.widget.spinner.SpinnerActivity" />
        <activity android:name=".useInterface.widget.webView.WebViewActivity" />
        <activity android:name=".resource.drawable.LayerDrawableActivity" />
