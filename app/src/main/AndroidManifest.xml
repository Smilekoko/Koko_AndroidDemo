        </activity>
        <activity android:name=".thread.asyncTask.AsyncTaskActivity" />
        <activity android:name=".component.ipc.parcelable.ParcelableActivity" />
        <activity android:name=".component.ipc.bundle.BundleActivity" />
        <service
            android:name=".component.service.One_Service"
            android:enabled="true"
            android:exported="true"
            android:permission=""
            tools:ignore="ExportedService" />
    </application>


</manifest>